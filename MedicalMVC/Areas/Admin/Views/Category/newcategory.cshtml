@using Medical.Service.Interfaces.Dtos.Categories
@model CreateCategoryDto
<section class="post box">
        <img class="bg-img1" src="img/Vector.png" alt="">
        <img class="bg-img2" src="img/Group 1000004136.png" alt="">
        <div class="navigation">
            <span><a class="select" asp-area="" asp-controller="home" asp-action="Index">Home</a></span>
            <span class="mx-2"><i class="fa-solid fa-chevron-right"></i></span>
            <span><a class="select" asp-area="admin" asp-controller="home" asp-action="Index">Admin</a></span>
            <span class="mx-2"><i class="fa-solid fa-chevron-right"></i></span>
            <span class="select">Create Category</span>
        </div>
        <h2 class="mb-4 lato fw-700">Post an Ad</h2>
        <form asp-controller="category" asp-action="newcategory" enctype="multipart/form-data" method="post">
            <div class="inputlar">
                <div class="inputs mr-20 w-100">
                    <h4 class="lato">Name</h4>
                    <input type="text" asp-for="Name" placeholder="Type product name" class="form-control">
                    <span class="text-danger">@Html.ValidationMessageFor(model => model.Name)</span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Post an ad</button>
        </form>
</section>