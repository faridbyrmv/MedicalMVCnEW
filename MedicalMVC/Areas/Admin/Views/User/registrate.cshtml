@using Medical.Service.Interfaces.Dtos.Account
@model AccountDto
<div class="Log_in box">
    <h2 class="Log_in-Name">Register</h2>
    <div class="navigation">
        <span><a class="select" asp-area="" asp-controller="home" asp-action="Index">Home</a></span>
        <span class="mx-2"><i class="fa-solid fa-chevron-right"></i></span>
        <span><a class="select" asp-area="admin" asp-controller="home" asp-action="Index">Admin</a></span>>
        <span class="mx-2"><i class="fa-solid fa-chevron-right"></i></span>
        <span class="select">Create an Admin</span>
    </div>
    <form method="post" asp-controller="user" asp-action="registrate">
        <div class="form-group">
            <label asp-for="UserEmail"></label>
            <input asp-for="UserEmail" class="form-control" type="text" placeholder="User Name" />
            <span class="text-danger">@Html.ValidationMessageFor(model => model.UserPassword)</span>
        </div>
        <div class="form-group">
            <label asp-for="UserPassword"></label>
            <input asp-for="UserPassword" class="form-control" type="text" placeholder="Password" />
            <span class="text-danger">@Html.ValidationMessageFor(model => model.UserPassword)</span>
        </div>
        <button type="submit" class="btn-primary">Register</button>
    </form>
</div>